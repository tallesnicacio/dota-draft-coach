{
  "name": "dota2-coach",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "setup": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "mock-gsi:heartbeat": "npx tsx tools/mock-gsi-sender.ts heartbeat",
    "mock-gsi:snapshot": "npx tsx tools/mock-gsi-sender.ts snapshot",
    "mock-gsi:simulate": "npx tsx tools/mock-gsi-sender.ts simulate",
    "mock-gsi:loop": "npx tsx tools/mock-gsi-sender.ts loop"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
